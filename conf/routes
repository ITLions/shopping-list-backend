# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                    @controllers.Application.index

# Categories
POST          /api/v1/categories/new               @controllers.CategoriesController.create
POST          /api/v1/categories/:id/update        @controllers.CategoriesController.update(id: java.util.UUID)
GET           /api/v1/categories                   @controllers.CategoriesController.list(offset: Long, limit: Long)
DELETE        /api/v1/categories/:id/delete        @controllers.CategoriesController.delete(id: java.util.UUID)

#Products
POST          /api/v1/products/new                 @controllers.ProductsController.create
POST          /api/v1/products/:id/update          @controllers.ProductsController.update(id: java.util.UUID)
GET           /api/v1/products                     @controllers.ProductsController.list(offset: Long, limit: Long)
DELETE        /api/v1/products/:id/delete          @controllers.ProductsController.delete(id: java.util.UUID)

# Units
POST          /api/v1/units/new                    @controllers.UnitsController.create
POST          /api/v1/units/:id/update             @controllers.UnitsController.update(id: java.util.UUID)
GET           /api/v1/units                        @controllers.UnitsController.list(offset: Long, limit: Long)
DELETE        /api/v1/units                        @controllers.UnitsController.delete(id: java.util.UUID)